<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/button_list">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            style="@style/label_common_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="left|center_vertical"/>

        <TextView android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola2"
            style="@style/label_common"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="left|center_vertical" android:layout_marginTop="2dp"/>


    </LinearLayout>
</RelativeLayout>